<p id="notice"><%= notice %></p>

<h1>Knowledges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>First note</th>
      <th>Average</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @knowledges.each do |knowledge| %>
      <tr>
        <td><%= knowledge.name %></td>
        <td><%= knowledge.state %></td>
        <td><%= knowledge.first_note %></td>
        <td><%= knowledge.average %></td>
        <td><%= link_to 'Show', knowledge %></td>
        <td><%= link_to 'Edit', edit_knowledge_path(knowledge) %></td>
        <td><%= link_to 'Destroy', knowledge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Knowledge', new_knowledge_path %>
